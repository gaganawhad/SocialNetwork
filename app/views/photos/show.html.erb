<%= image_tag @photo.image.url %>
<% @photo.comments.each do |comment| %>
  <% unless comment.new_record? %>
    <p><%= comment.commentor.first_name %> says
    <%= comment.comment %></p>
  <% end %>
<% end %>

<p>Add comment </p>
<% semantic_form_for @comment, :url => {:controller => :comments, :action => :create} do |form| %>
  <%= form.input :commentable_id, :as => :hidden %>
  <%= form.input :commentable_type, :as => :hidden %>
  <%= form.input :user_id, :as => :hidden, :value => current_user.id %>
  <%= form.input :comment %>
  <%= form.buttons %>
<% end %>
